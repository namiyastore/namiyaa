<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="global.sesoc.namiya.dao.LinenotifyMapper">
	
	<insert id="insertNotifyToken" parameterType="Linenotify">
		insert into 
			linenotify
		(
			userid,
			token
		) 
		values
		(
			#{userid},
			#{token}
		)
	</insert>
	
	<select id="selectOne" parameterType="string" resultType="Linenotify">
		select 
			userid, token, onoff 
		from 
			linenotify 
		where 
			userid = #{userid}
	</select>
	
</mapper>
