<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="global.sesoc.namiya.dao.ProfileMapper">

	<select id="select" parameterType="String" resultType="Profile">
		select * from profile where userid = #{userid}
	</select>
	
	<update id="update" parameterType="Profile">
		update 
			profile 
		set 
			nickname = #{nickname}, content = #{content}, originalfile = #{originalfile}, savedfile = #{savedfile} 
		where
			userid = #{userid} 
		
	</update>
	
</mapper>
